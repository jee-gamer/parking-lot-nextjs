{
  "compilerOptions": {
    "target": "esnext",  // or higher, like "ES2020"
    "module": "esnext",  // or "Node16", depending on your environment
    "moduleResolution": "Node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  }
}

